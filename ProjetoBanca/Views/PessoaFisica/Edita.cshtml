
@{
    Layout = "~/Content/dodmond/_layout.cshtml";
}

<form class="margem-superior" id="cad-pf" action="/PessoaFisica/Editar" method="post">
    <div class="form-group">
        <div class="coluna1">

            <input id="id" name="pessoa.ID" value=@ViewBag.Pessoa.ID class="form-control" style="display:none;" />

            <label for="nome">Nome:</label>
            <input id="nome" name="pessoa.Nome" class="form-control tamanho-input" value="@ViewBag.Pessoa.Nome" />
            @Html.ValidationMessage("pessoa.Nome")
            <br />

            <label for="sexo">Sexo:</label>
            <select id="sexo" name="pessoa.Sexo" class="form-control" value="@ViewBag.Pessoa.Sexo" selected="@ViewBag.Pessoa.Sexo">
                <option value="M">M</option>
                <option value="F">F</option>
            </select>
            <br />

            <label for="dataNascimento">Data de nascimento:</label>
            <input id="dataNascimento" name="pessoa.DataNascimento" class="form-control tamanho-input" value="@ViewBag.Pessoa.DataNascimento" />
            @Html.ValidationMessage("pessoa.DataNascimento")
            <br />

            <label for="cpf">CPF:</label>
            <input id="cpf" name="pessoa.CPF" class="form-control tamanho-input" pattern="\d{3}\.\d{3}\.\d{3}-\d{2}"
            title="Digite o CPF no formato nnn.nnn.nnn-nn" value="@ViewBag.Pessoa.CPF" />
            @Html.ValidationMessage("pessoa.CPF")
            <br />

            <label for="tipo">Tipo:</label>
            <select id="tipo" name="pessoa.TipoID" class="form-control" value="@ViewBag.Pessoa.TipoID">
                @foreach (var tipo in ViewBag.TipoUsuario)
                {
                    <option value="@tipo.ID" selected="@tipo.ID.Equals(ViewBag.Pessoa.TipoID)">@tipo.Nome</option>
                }
            </select>
            <br />
        </div>

        <div class="coluna2">
            <label for="rua">Rua:</label>
            <input id="rua" name="pessoa.Rua" class="form-control tamanho-input" value="@ViewBag.Pessoa.Rua"/>
            <br />

            <label for="bairro">Bairro:</label>
            <input id="bairro" name="pessoa.Bairro" class="form-control tamanho-input" value="@ViewBag.Pessoa.Bairro"/>
            <br />

            <label for="numeroLogradouro">Numero Logradouro:</label>
            <input id="numeroLogradouro" name="pessoa.NumeroLogradouro" class="form-control tamanho-input" type="number" min="0" value="@ViewBag.Pessoa.NumeroLogradouro"/>
            <br />

            <label for="complemento">Complemento:</label>
            <input id="complemento" name="pessoa.Complemento" class="form-control tamanho-input" value="@ViewBag.Pessoa.Complemento"/>
            <br />

            <label for="email">Email:</label>
            <input type="email" id="email" name="email" class="form-control tamanho-input" />
            <br />
        </div>
    </div>

    <input type="submit" id="salvar-pf" class="form-control center-block ajustar-botao btn-primary" />
</form>

    <script src="~/Scripts/jquery-3.3.1.js"></script>
    <script src="~/Scripts/Meus scripts/Scripts-produto/main.js"></script>