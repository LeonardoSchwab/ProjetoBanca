@{
    // Layout = "~/Views/Shared/_Layout.cshtml";
    Layout = "~/Content/dodmond/_layout.cshtml";
}

<form class="margem-superior" id="cad-pf" action="/PessoaFisica/Adiciona" method="post">
    <div class="form-group">
        <div class="coluna1">
            <label for="nome">Nome:</label>
            <input id="nome" name="pessoa.Nome" class="form-control tamanho-input" />
            @Html.ValidationMessage("pessoa.Nome")
            <br />

            <label for="sexo">Sexo:</label>
            <select id="sexo" name="pessoa.Sexo" class="form-control">
                <option value="M">M</option>
                <option value="F">F</option>
            </select>
            <br />

            <label for="dataNascimento">Data de nascimento:</label>
            <input id="dataNascimento" name="pessoa.DataNascimento" class="form-control tamanho-input" />
            @Html.ValidationMessage("pessoa.DataNascimento")
            <br />

            <label for="cpf">CPF:</label>
            <input id="cpf" name="pessoa.CPF" class="form-control tamanho-input" />
            @Html.ValidationMessage("pessoa.CPF")
            <br />

            <label for="tipo">Tipo:</label>
            <select id="tipo" name="pessoa.TipoID" class="form-control">
                @foreach (var tipo in ViewBag.TipoUsuario)
                {
                    <option value="@tipo.ID">@tipo.Nome</option>
                }
            </select>
            <br />
        </div>

        <div class="coluna2">
            <label for="rua">Rua:</label>
            <input id="rua" name="pessoa.Rua" class="form-control tamanho-input" />
            <br />

            <label for="bairro">Bairro:</label>
            <input id="bairro" name="pessoa.Bairro" class="form-control tamanho-input" />
            <br />
            
            <label for="numeroLogradouro">Numero Logradouro:</label>
            <input id="numeroLogradouro" name="pessoa.NumeroLogradouro" class="form-control tamanho-input" />
            <br />
            
            <label for="complemento">Complemento:</label>
            <input id="complemento" name="pessoa.Complemento" class="form-control tamanho-input" />
            <br />
            
            <label for="email">Email:</label>
            <input type="email" id="email" name="email" class="form-control tamanho-input" />
            <br />
        </div>        
    </div>

    <input type="submit" id="salvar-pf" class="form-control center-block ajustar-botao" />
</form>
    
<script src="~/Scripts/jquery-3.3.1.js"></script>
<script src="~/Scripts/Meus scripts/Scripts-pessoaFisica/main.js"></script>