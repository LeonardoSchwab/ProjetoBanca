
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<table class="table">
    <thead>
        <tr>
            <th>Id</th>
            <th>Produtos</th>
            <th>Preço unitário</th>
            <th>Preço total</th>
            <th>Quantidade</th>
            <th>Remover</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var venda in ViewBag.Venda)
        {
            <tr>
                <td>@venda.ID</td>
                <td>@venda.Nome</td>
                <td>@venda.PrecoUnitario</td>
                <td>@venda.PrecoTotal</td>
                <td>@venda.Quantidade</td>
                <td><a class="botao-remover" href="#">D</a></td>
            </tr>
        }
    </tbody>
</table>

<script src="~/Scripts/jquery-3.3.1.js"></script>
