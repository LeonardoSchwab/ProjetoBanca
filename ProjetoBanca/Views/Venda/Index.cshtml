
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<table class="table">
    <thead>
        <tr>
            <th>Id</th>
            <th>Preço total</th>
            <th>Quantidade</th>
            <th>Remover</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var venda in ViewBag.Venda)
        {
            <tr>
                <td class="id">@venda.ID</td>
                <td class="precoTotal">@venda.PrecoTotal</td>
                <td class="quantidade">@venda.Quantidade</td>
                <td><a class="botao-remover" href="#">D</a></td>
            </tr>
        }
    </tbody>
</table>

<script src="~/Scripts/jquery-3.3.1.js"></script>
<script src="~/Scripts/Meus scripts/Scripts-venda/main.js"></script>

