@{
    //Layout = "~/Views/Shared/_Layout.cshtml";
    Layout = "~/Content/dodmond/_layout.cshtml";
}

<table class="table cinza">
    <thead>
        <tr>
            <th style="display:none;">Id</th>
            <th>Nome</th>
            <th>Editar</th>
            <th>Remover</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var categoria in ViewBag.Categoria)
        {
        <tr>
            <td class="id" style="display:none;">@categoria.ID</td>
            <td class="nome">@categoria.Nome</td>
            <td><a class="botao-editar fa fa-edit" href="http://localhost:62680/Categoria/Edita?id=@categoria.ID"></a></td>
            <td><a class="botao-remover fa fa-close" href="#"></a></td>
            
        </tr>
        }
    </tbody>
</table>

<script src="~/Scripts/jquery-3.3.1.js"></script>
<script src="~/Scripts/Meus scripts/Scripts-categoria/main.js"></script>