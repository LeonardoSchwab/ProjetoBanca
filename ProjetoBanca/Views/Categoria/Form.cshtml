@{
    //Layout = "~/Views/Shared/_Layout.cshtml";    
    Layout = "~/Content/dodmond/_layout.cshtml";
}


<form class="margem-superior" action="/Categoria/Adiciona" method="post" id="cad-categoria">
    <div class="form-group text-center">
        <label for="nome" style="margin-right: 27%;">Nome:</label>
        <input id="nome" name="categoria.Nome" class="form-control center-block" value="@ViewBag.Categoria.Nome"/>
        <span style="margin-right: 4%;">@Html.ValidationMessage("categoria.Nome")</span>
    </div>
    <input type="submit" id="salvar-categoria" class="form-control center-block ajustar-botao btn-success" />
</form>


<script src="~/Scripts/jquery-3.3.1.js"></script>
<script src="~/Scripts/Meus scripts/Scripts-categoria/main.js"></script>