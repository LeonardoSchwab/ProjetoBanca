
@{
    // Layout = "~/Views/Shared/_Layout.cshtml";
    Layout = "~/Content/dodmond/_layout.cshtml";
}

<table class="table cinza">
    <thead>
        <tr>
            <th>Id</th>
            <th>Descrição</th>
            <th>Desconto</th>
            <th>Produto</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var promocao in ViewBag.Promocao)
        {
            <tr>
                <td class="id">@promocao.ID</td>
                <td class="descricao">@promocao.Descricao</td>
                <td class="desconto">@promocao.Desconto</td>                
            </tr>
        }
    </tbody>
</table>
    