<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-inverse">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Application name", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Home", "Index", "Home")</li>
                    <li>@Html.ActionLink("Produto", "Index", "Produto")</li>
                    <li>@Html.ActionLink("Cadastro produto", "Form", "Produto")</li>
                    <li>@Html.ActionLink("Categoria", "Index", "Categoria")</li>
                    <li>@Html.ActionLink("Cadastro categoria", "Form", "Categoria")</li>
                    <li>@Html.ActionLink("Pessoa Fisica", "Index", "PessoaFisica")</li>
                    <li>@Html.ActionLink("Cadastro pessoa fisica", "Form", "PessoaFisica")</li>
                    <li>@Html.ActionLink("Pessoa Juridica", "Index", "PessoaJuridica")</li>
                    <li>@Html.ActionLink("Cadastro pessoa juridica", "Form", "PessoaJuridica")</li>
                    <li>@Html.ActionLink("Promocao", "Index", "Promocao")</li>
                    <li>@Html.ActionLink("Cadastro promocao", "Form", "Promocao")</li>
                    <li>@Html.ActionLink("Tipo de usuario", "Index", "TipoUsuario")</li>
                    <li>@Html.ActionLink("Cadastro tipo de usuario", "Form", "TipoUsuario")</li>
                    <li>@Html.ActionLink("Venda", "Index", "Venda")</li>
                    <li>@Html.ActionLink("Cadastro venda", "Venda", "Venda")</li>
                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
